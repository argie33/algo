ARG REGISTRY=python
ARG TAG=3.11-slim
FROM ${REGISTRY}:${TAG}

WORKDIR /app

# Copy requirements and script
COPY requirements-loadearningsestimate.txt .
COPY loadearningsestimate.py .

# Install the requirements
RUN --mount=type=cache,target=/root/.cache/pip pip install --prefer-binary -r requirements-loadearningsestimate.txt

# Set the entrypoint
ENTRYPOINT ["python", "loadearningsestimate.py"]
