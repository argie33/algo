{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["react"],
  "globals": {
    "globalThis": "readonly",
    "vi": "readonly"
  },
  "rules": {
    "react/prop-types": "off",
    "no-unused-vars": ["warn", { "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }],
    "react/react-in-jsx-scope": "off",
    "react/display-name": "off",
    "react/jsx-uses-vars": "error",
    "react/jsx-key": "error",
    "require-atomic-updates": "off",
    "react-hooks/exhaustive-deps": "off",
    "react-refresh/only-export-components": "off",
    "unused-imports/no-unused-imports": "off"
  },
  "overrides": [
    {
      "files": [
        "**/*.test.js",
        "**/*.test.jsx",
        "**/*.spec.js",
        "**/*.spec.jsx",
        "**/tests/**/*.js",
        "**/tests/**/*.jsx"
      ],
      "env": {
        "jest": true
      },
      "globals": {
        "describe": "readonly",
        "it": "readonly",
        "test": "readonly",
        "expect": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "beforeAll": "readonly",
        "afterAll": "readonly",
        "jest": "readonly",
        "vi": "readonly",
        "globalThis": "readonly",
        "global": "writable"
      }
    }
  ]
}