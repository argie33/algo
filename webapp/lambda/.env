# AWS Environment Configuration
NODE_ENV=production

# Database Configuration - AWS RDS
# Set DB_SECRET_ARN in Lambda environment variables for database access
DB_SECRET_ARN=${DB_SECRET_ARN}

# AWS Configuration
AWS_REGION=us-east-1
WEBAPP_AWS_REGION=us-east-1
# API_GATEWAY_ID is dynamically set by CloudFormation
API_STAGE=dev
# API_GATEWAY_URL is dynamically set by CloudFormation

# AWS Cognito Configuration - Leave empty for development mode
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=

# CORS Configuration
# CORS_ALLOWED_ORIGINS is dynamically configured by CloudFormation

# Local Development Database Configuration
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=stocks
DB_PORT=5432
NODE_ENV=development

