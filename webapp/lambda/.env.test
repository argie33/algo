# Test Environment Configuration
NODE_ENV=test

# JWT Configuration for Tests
JWT_SECRET=test-jwt-secret-for-integration-tests

# API Key Encryption for Tests
API_KEY_ENCRYPTION_SECRET=test-encryption-secret-key-32-bytes!!

# Database Configuration for Tests
# For CI/CD: Use AWS test database or containerized database
# For local testing: Can override with localhost values in .env.test.local
TEST_DB_HOST=${TEST_DB_HOST:-postgres}  # Docker service name or test DB host
TEST_DB_PORT=${TEST_DB_PORT:-5432}
TEST_DB_NAME=${TEST_DB_NAME:-financial_platform_test}
TEST_DB_USER=${TEST_DB_USER:-postgres}
TEST_DB_PASSWORD=${TEST_DB_PASSWORD:-postgres}
TEST_DB_SSL=${TEST_DB_SSL:-false}

# For local testing with localhost, create .env.test.local with:
# TEST_DB_HOST=localhost

# AWS Configuration for Tests (mock values)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key

# Mock AWS Resource ARNs for Tests
DB_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789012:secret:test-db-secret
API_KEY_ENCRYPTION_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789012:secret:test-encryption-secret

# API Configuration for Tests
API_BASE_URL=http://localhost:3001
API_TIMEOUT=30000

# External API Configuration for Tests (mock values)
ALPACA_API_KEY=PKTEST123456789TEST
ALPACA_SECRET_KEY=test-alpaca-secret-key-for-testing
POLYGON_API_KEY=test-polygon-key
FINNHUB_API_KEY=test-finnhub-key

# Test-specific Configuration
TEST_TIMEOUT=30000
TEST_DB_POOL_SIZE=5
TEST_PARALLEL_WORKERS=1

# Logging Configuration for Tests
LOG_LEVEL=info
LOG_TO_CONSOLE=true
LOG_TO_FILE=false