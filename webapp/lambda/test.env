# Real Integration Test Environment Variables
# NO MOCKS - Real database and services

NODE_ENV=test

# Real Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=financial_platform_test
DB_USER=postgres
DB_PASS=
DB_SSL=false

# Real database pool configuration
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Configuration
JWT_SECRET=test-jwt-secret-for-integration-tests-only
JWT_EXPIRES_IN=1h

# Real API Keys for Integration Testing (use sandbox/test keys)
ALPACA_API_KEY=test-alpaca-key
ALPACA_SECRET_KEY=test-alpaca-secret
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Real Redis Configuration (if available)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Real AWS Configuration (optional - use localstack or test environment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# Skip AWS Secrets Manager in tests
DB_SECRET_ARN=

# Real External API Keys (use test/sandbox versions)
POLYGON_API_KEY=test-polygon-key
ALPHA_VANTAGE_API_KEY=test-alpha-vantage-key
FINNHUB_API_KEY=test-finnhub-key

# Test user credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test-password-123

# Logging configuration
LOG_LEVEL=debug
STRUCTURED_LOGGING=true

# Circuit breaker configuration for real testing
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000

# Rate limiting (real limits)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Real email configuration (use test service like MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test
FROM_EMAIL=noreply@test.com

# Performance monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true

# Security settings for testing
BCRYPT_ROUNDS=4
SESSION_SECRET=test-session-secret

# Feature flags for integration tests
ENABLE_REAL_TRADING=false
ENABLE_NOTIFICATIONS=false
ENABLE_ANALYTICS=true

# Test data generation
GENERATE_TEST_DATA=true
TEST_DATA_SYMBOLS=AAPL,MSFT,GOOGL,AMZN,TSLA