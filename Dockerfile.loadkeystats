# Dockerfile.keystats
FROM python:3.9-slim

WORKDIR /app

# Install system dependencies for MySQL client
RUN apt-get update && apt-get install -y gcc default-libmysqlclient-dev && apt-get clean

# Install Python dependencies
COPY requirements-loadkeystats.txt .
RUN pip install --no-cache-dir -r requirements-loadkeystats.txt

# Copy script
COPY loadkeystats.py .

ENTRYPOINT ["python", "loadkeystats.py"]
