# Dockerfile.realtime
FROM public.ecr.aws/lambda/python:3.11

WORKDIR ${LAMBDA_TASK_ROOT}

# Copy requirements and script
COPY Dockerfile.realtime requirements-loadrealtime.txt loadrealtime.py ./

# Install the requirements
RUN --mount=type=cache,target=/root/.cache/pip pip install --prefer-binary -r requirements-loadrealtime.txt

# Set the entrypoint
ENTRYPOINT ["python", "loadrealtime.py"]
