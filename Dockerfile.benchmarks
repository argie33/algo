# Dockerfile.benchmarks
FROM public.ecr.aws/lambda/python:3.11

WORKDIR ${LAMBDA_TASK_ROOT}

# Copy requirements and script
COPY Dockerfile.benchmarks requirements-loadbenchmarks.txt loadbenchmarks.py ./

# Install the requirements
RUN --mount=type=cache,target=/root/.cache/pip pip install --prefer-binary -r requirements-loadbenchmarks.txt

# Set the entrypoint
ENTRYPOINT ["python", "loadbenchmarks.py"]
