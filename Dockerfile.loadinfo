FROM python:3.10-slim

# Deployment trigger test - loadinfo update v2
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
      build-essential \
      gcc \
      libpq-dev \
      libssl-dev \
      libffi-dev && \
    rm -rf /var/lib/apt/lists/*

COPY requirements-loadinfo.txt .
RUN pip install --no-cache-dir -r requirements-loadinfo.txt

COPY loadinfo.py .
CMD ["python", "loadinfo.py"]
