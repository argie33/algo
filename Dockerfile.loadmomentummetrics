FROM python:3.11-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY requirements-loadmomentummetrics.txt .
RUN pip install --no-cache-dir --prefer-binary -r requirements-loadmomentummetrics.txt

# Copy the loader script
COPY loadmomentummetrics.py .

# Run the loader
CMD ["python", "loadmomentummetrics.py"]
