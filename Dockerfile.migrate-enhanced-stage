FROM python:3.12-slim

WORKDIR /app

# Install PostgreSQL client and AWS CLI dependencies
RUN apt-get update && \
    apt-get install -y postgresql-client && \
    rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir \
    boto3 \
    psycopg2-binary

# Copy migration files
COPY migrate_enhanced_stage_analysis.sql /app/
COPY deploy_enhanced_stage.py /app/

# Make script executable
RUN chmod +x /app/deploy_enhanced_stage.py

CMD ["python3", "/app/deploy_enhanced_stage.py"]
