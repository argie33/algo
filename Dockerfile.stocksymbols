# Use a slim Python base
FROM python:3.9-slim

# Create app dir
WORKDIR /app

# Copy and install requirements
COPY requirements-loadstocksymbols.txt .
RUN pip install --no-cache-dir -r requirements-loadstocksymbols.txt

# Copy your code in and rename entrypoint to index.py
COPY loadstocksymbols.py index.py

# Default command: run your handler
CMD ["python", "index.py"]
