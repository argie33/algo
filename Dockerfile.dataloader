# Dockerfile for Data Loaders
# Multi-stage build for efficient data loader containers
# Updated Sep 18 2025 - trigger build for loader verification

FROM python:3.11-slim as base

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONHASHSEED=random \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Accept build argument for requirements file
ARG REQUIREMENTS_FILE

# Copy specific requirements file for better caching
COPY ${REQUIREMENTS_FILE} /app/loader-requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r /app/loader-requirements.txt

# Production stage
FROM base as production

# Copy application code
COPY . .

# Create logs directory
RUN mkdir -p logs

# Set up proper permissions
RUN chmod +x *.py

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python3 -c "import database; print('Database module OK')"

# Default command - will be overridden by ECS task
CMD ["python3", "--version"]

# Labels for container metadata
LABEL maintainer="Financial Platform Team" \
      version="1.0" \
      description="Data Loader Container for Financial Platform"