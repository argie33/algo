# AWS ECS Environment Configuration
# Used by load_with_env.sh to load credentials and database configuration

# AWS Configuration
export AWS_DEFAULT_REGION=us-east-1
export AWS_REGION=us-east-1

# Database Configuration - for AWS RDS via Secrets Manager
# Format: arn:aws:secretsmanager:region:account:secret:name
export DB_SECRET_ARN=arn:aws:secretsmanager:us-east-1:626216981288:secret:rds-stocks-secret-ABCDE

# Alternative: Direct database connection (if AWS Secrets Manager is unavailable)
# Uncomment these to use direct database connection instead of Secrets Manager
# export DB_HOST=stocks.xxxxx.us-east-1.rds.amazonaws.com
# export DB_PORT=5432
# export DB_USER=stocks
# export DB_PASSWORD=YOUR_PASSWORD_HERE
# export DB_NAME=stocks_db

# Python Configuration
export PYTHONUNBUFFERED=1

# Logging Configuration
export LOG_LEVEL=INFO
