FROM python:3.11-slim

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
      build-essential \
      gcc \
      libpq-dev \
      libssl-dev \
      libffi-dev && \
    rm -rf /var/lib/apt/lists/*

COPY requirements-loadmarket.txt .
RUN pip install --no-cache-dir -r requirements-loadmarket.txt

COPY loadmarket.py .
CMD ["python", "loadmarket.py"]