FROM python:3.11-slim

# Set environment variables to suppress pip warnings
ENV PIP_ROOT_USER_ACTION=ignore \
    PIP_DISABLE_PIP_VERSION_CHECK=1


WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements-loadquarterlycashflow.txt .
RUN --mount=type=cache,target=/root/.cache/pip pip install --prefer-binary -r requirements-loadquarterlycashflow.txt

# Copy the loader script
COPY loadquarterlycashflow.py .

# Set environment variables
ENV PYTHONUNBUFFERED=1

# Run the loader
CMD ["python", "loadquarterlycashflow.py"] 