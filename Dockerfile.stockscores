# Dockerfile.stockscores
FROM public.ecr.aws/lambda/python:3.11

WORKDIR ${LAMBDA_TASK_ROOT}

# Copy requirements and script
COPY Dockerfile.stockscores requirements-loadstockscores.txt loadstockscores.py ./

# Install the requirements
RUN --mount=type=cache,target=/root/.cache/pip pip install --prefer-binary -r requirements-loadstockscores.txt

# Set the entrypoint
ENTRYPOINT ["python", "loadstockscores.py"]