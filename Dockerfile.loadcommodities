FROM python:3.9-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements-loadcommodities.txt .
RUN pip install --no-cache-dir -r requirements-loadcommodities.txt

# Copy the script
COPY loadcommodities.py .

# Make script executable
RUN chmod +x loadcommodities.py

# Run the script
CMD ["python", "loadcommodities.py"]