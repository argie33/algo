# ================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# ================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to git - it contains secrets
# ================================================================

# ================================================================
# DATABASE CONFIGURATION
# ================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stocks
DB_USER=stocks
DB_PASSWORD=your_secure_password_here
DB_SSL=false

# AWS RDS with Secrets Manager (optional, for production)
# DB_SECRET_ARN=arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:database-secret-NAME

# Connection pool settings (optional, defaults provided)
DB_POOL_MAX=3
DB_POOL_MIN=1
DB_POOL_IDLE_TIMEOUT=10000
DB_CONNECT_TIMEOUT=3000
DB_STATEMENT_TIMEOUT=30000
DB_QUERY_TIMEOUT=25000

# ================================================================
# NODE RUNTIME
# ================================================================
NODE_ENV=development
PORT=3001

# ================================================================
# AWS CONFIGURATION
# ================================================================
AWS_REGION=us-east-1
WEBAPP_AWS_REGION=us-east-1

# ================================================================
# AUTHENTICATION
# ================================================================
LOCAL_DEV_MODE=true
ALLOW_DEV_BYPASS=true

# AWS Cognito (optional, for production auth)
COGNITO_USER_POOL_ID=your-cognito-user-pool-id
COGNITO_CLIENT_ID=your-cognito-client-id

# JWT Secret (CHANGE IN PRODUCTION!)
JWT_SECRET=your-secret-jwt-key-here

# ================================================================
# ALPACA TRADING API
# ================================================================
APCA_API_BASE_URL=https://paper-api.alpaca.markets
APCA_API_KEY_ID=your-alpaca-api-key
APCA_API_SECRET_KEY=your-alpaca-secret-key
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_PAPER_TRADING=true
PORTFOLIO_USER_ID=your-alpaca-user-id

# ================================================================
# FINANCIAL DATA API KEYS
# ================================================================
FRED_API_KEY=your-fred-api-key
ALPHA_VANTAGE_API_KEY=your-alphavantage-api-key
INTRINIO_API_KEY=your-intrinio-api-key
POLYGON_API_KEY=your-polygon-api-key
QUANDL_API_KEY=your-quandl-api-key

# ================================================================
# FRONTEND CONFIGURATION
# ================================================================
FRONTEND_URL=http://localhost:5173
API_STAGE=dev
