FROM python:3.11-slim

# BuySell Monthly loader - analyst buy/sell recommendations by month
# Set environment variables to suppress pip warnings
ENV PIP_ROOT_USER_ACTION=ignore \
    PIP_DISABLE_PIP_VERSION_CHECK=1


# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements-loadbuysellmonthly.txt .

# Install Python dependencies
RUN --mount=type=cache,target=/root/.cache/pip pip install --prefer-binary -r requirements-loadbuysellmonthly.txt

# Copy the script
COPY loadbuysellmonthly.py .

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV LOG_LEVEL=ERROR
ENV AWS_DEFAULT_REGION=us-east-1

# Run the script
ENTRYPOINT ["python", "-u", "loadbuysellmonthly.py"]
# Trigger Mon Oct 7 01:20 CDT 2025 - Deploy trading signals loaders 